<div class="task-form">
    <h2>✏️ Редактировать задачу</h2>

    <form action="/edit/<%= task._id %>" method="POST">
        <label><i class="fas fa-heading"></i> Название</label>
        <input type="text" name="title" value="<%= task.title %>" required>

        <label><i class="fas fa-align-left"></i> Описание</label>
        <textarea name="description"><%= task.description %></textarea>

        <label><i class="fas fa-calendar-alt"></i> Дедлайн</label>
        <input type="datetime-local" name="deadline" value="<%= task.deadline ? new Date(task.deadline).toISOString().slice(0, -1) : '' %>">

        <button type="submit" class="btn big-btn"><i class="fas fa-save"></i> Сохранить</button>
    </form>

    <a href="/" class="btn"><i class="fas fa-arrow-left"></i> Назад</a>
</div>
